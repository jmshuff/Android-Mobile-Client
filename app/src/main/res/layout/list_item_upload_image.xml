<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <TextView
        android:id="@+id/upload_image_prototype"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Prototype: "
        android:fontFamily="@font/lato_bold"
        android:padding="8dp"
        android:textSize="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/labels_list"
            android:weightSum="2">
            <TextView
                android:id="@+id/textview_right_eye_picture"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Right Eye Photo"
                android:fontFamily="@font/lato_bold"
                android:gravity="center_horizontal"/>

            <TextView
                android:id="@+id/textview_left_eye_picture"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Left Eye Photo"
                android:fontFamily="@font/lato_bold"
                android:gravity="center_horizontal"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="2dp"
            android:weightSum="2">
            <ImageView
                android:id="@+id/imageview_right_eye_picture"
                android:layout_width="0dp"
                android:layout_height="170dp"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:paddingRight="5dp"
                app:srcCompat="@drawable/ic_camera_box" />

            <ImageView
                android:id="@+id/imageview_left_eye_picture"
                android:layout_width="0dp"
                android:layout_height="170dp"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:paddingLeft="5dp"
                app:srcCompat="@drawable/ic_camera_box" />
        </LinearLayout>
</LinearLayout>

