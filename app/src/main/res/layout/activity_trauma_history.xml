<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="app.insightfuleye.client.activities.traumaHistoryActivity.traumaHistoryActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </com.google.android.material.appbar.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="app.insightfuleye.client.activities.traumaHistoryActivity.traumaHistoryActivity"
        tools:showIn="@layout/activity_trauma_history">

        <ScrollView
            android:id="@+id/traumaHist_scroll_view"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:fillViewport="false">

            <LinearLayout
                android:id="@+id/layout_traumaHistory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    app:srcCompat = "@drawable/ic_scalpel">
                </ImageView>


                <TextView
                    android:id="@+id/injury_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:layout_gravity="center_vertical"
                    android:includeFontPadding="false"
                    android:gravity="center_vertical"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/lato_bold"
                    android:text="@string/trauma_description"
                    android:textSize="@dimen/card_content_text_size"
                    android:focusable="true"
                    android:focusableInTouchMode="true"/>
            </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardview1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="10dp"
                    app:cardCornerRadius="10sp"
                    app:cardElevation="3dp"
                    app:cardPreventCornerOverlap="false">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/mode_of_injury_layout">

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/mode_of_injury"
                                android:drawableStart="@drawable/ic_scalpel_gray"
                                android:drawablePadding="10dp"
                                android:ems="10"
                                android:fontFamily="@font/lato_regular"
                                android:freezesText="true"
                                android:hint="@string/mode_of_injury"
                                android:inputType="textMultiLine"
                                android:imeOptions="actionUnspecified"
                                android:textSize="@dimen/card_content_sub_text_size"/>
                        </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/trauma_occurrence_layout">

                                <EditText
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/trauma_occurrence"
                                    android:drawableStart="@drawable/ic_event_black_24dp"
                                    android:drawablePadding="10dp"
                                    android:ems="10"
                                    android:fontFamily="@font/lato_regular"
                                    android:freezesText="true"
                                    android:hint="@string/trauma_occurrence"
                                    android:imeOptions="actionUnspecified"
                                    android:maxLength="25"
                                    android:maxLines="1"
                                    android:singleLine="true"
                                    android:inputType="number"
                                    android:textSize="@dimen/card_content_sub_text_size"/>
                            </com.google.android.material.textfield.TextInputLayout>


                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        app:srcCompat = "@drawable/ic_medicine">
                    </ImageView>


                    <TextView
                        android:id="@+id/trauma_treatment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:layout_gravity="center_vertical"
                        android:includeFontPadding="false"
                        android:gravity="center_vertical"
                        android:layout_marginStart="5dp"
                        android:fontFamily="@font/lato_bold"
                        android:text="@string/trauma_treatment_description"
                        android:textSize="@dimen/card_content_text_size"
                        android:focusable="true"
                        android:focusableInTouchMode="true"/>
                </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardview2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="10sp"
                app:cardElevation="3dp"
                app:cardPreventCornerOverlap="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/trauma_doc_consult"
                        android:fontFamily="@font/lato_regular"
                        android:drawableStart="@drawable/ic_doctor"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:drawablePadding="10dp"
                        android:textSize="18sp"/>


                    <RadioGroup
                        android:id="@+id/radioGrp_drConsult"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="30dp"
                        android:focusable="true"
                        android:focusableInTouchMode="true">

                        <RadioButton
                            android:id="@+id/doctor_yes_trauma"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawablePadding="10dp"
                            android:fontFamily="@font/lato_regular"
                            android:text="@string/generic_yes"
                            android:textSize="@dimen/card_content_sub_text_size" />

                        <RadioButton
                            android:id="@+id/doctor_no_trauma"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawablePadding="10dp"
                            android:fontFamily="@font/lato_regular"
                            android:text="@string/generic_no"
                            android:textSize="@dimen/card_content_sub_text_size"
                            />

                    </RadioGroup>

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/otc_meds"
                            android:fontFamily="@font/lato_regular"
                            android:drawableStart="@drawable/ic_medicine"
                            android:drawablePadding="10dp"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:textSize="18sp"/>

                        <RadioGroup
                            android:id="@+id/radioGrp_otc"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingLeft="30dp"
                            android:focusable="true"
                            android:focusableInTouchMode="true">

                            <RadioButton
                                android:id="@+id/otc_yes"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:drawablePadding="10dp"
                                android:fontFamily="@font/lato_regular"
                                android:text="@string/generic_yes"
                                android:textSize="@dimen/card_content_sub_text_size" />

                            <RadioButton
                                android:id="@+id/otc_no"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:drawablePadding="10dp"
                                android:fontFamily="@font/lato_regular"
                                android:text="@string/generic_no"
                                android:textSize="@dimen/card_content_sub_text_size"
                                />

                        </RadioGroup>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/otc_type_layout">


                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/otc_type"
                            android:drawableStart="@drawable/ic_medicine_gray"
                            android:drawablePadding="10dp"
                            android:ems="10"
                            android:fontFamily="@font/lato_regular"
                            android:freezesText="true"
                            android:hint="@string/otc_type"
                            android:imeOptions="actionUnspecified"
                            android:inputType="textMultiLine"
                            android:maxLength="120"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textSize="@dimen/card_content_sub_text_size"/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/otc_frequency_layout">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/otc_frequency"
                            android:drawableStart="@drawable/event_icon"
                            android:drawablePadding="10dp"
                            android:ems="10"
                            android:fontFamily="@font/lato_regular"
                            android:freezesText="true"
                            android:hint="@string/otc_frequency"
                            android:imeOptions="actionUnspecified"
                            android:inputType="number"
                            android:maxLength="25"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textSize="@dimen/card_content_sub_text_size"/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/tem_applied"
                        android:fontFamily="@font/lato_regular"
                        android:drawableStart="@drawable/ic_medicine"
                        android:drawablePadding="10dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:textSize="18sp"/>

                    <RadioGroup
                        android:id="@+id/radioGrp_traditional"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="30dp"
                        android:focusable="true"
                        android:focusableInTouchMode="true">

                        <RadioButton
                            android:id="@+id/traditional_yes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawablePadding="10dp"
                            android:fontFamily="@font/lato_regular"
                            android:text="@string/generic_yes"
                            android:textSize="@dimen/card_content_sub_text_size" />

                        <RadioButton
                            android:id="@+id/traditional_no"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawablePadding="10dp"
                            android:fontFamily="@font/lato_regular"
                            android:text="@string/generic_no"
                            android:textSize="@dimen/card_content_sub_text_size"
                            />

                    </RadioGroup>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tem_type_layout">


                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/tem_type"
                            android:drawableStart="@drawable/ic_medicine_gray"
                            android:drawablePadding="10dp"
                            android:ems="10"
                            android:fontFamily="@font/lato_regular"
                            android:freezesText="true"
                            android:hint="@string/tem_type"
                            android:imeOptions="actionUnspecified"
                            android:inputType="textMultiLine"
                            android:maxLength="120"
                            android:singleLine="true"
                            android:textSize="@dimen/card_content_sub_text_size"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tem_frequency_layout">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/tem_frequency"
                            android:drawableStart="@drawable/ic_event_black_24dp"
                            android:drawablePadding="10dp"
                            android:ems="10"
                            android:fontFamily="@font/lato_regular"
                            android:freezesText="true"
                            android:hint="@string/tem_frequency"
                            android:imeOptions="actionUnspecified"
                            android:inputType="number"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textSize="@dimen/card_content_sub_text_size"/>
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>





                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|end"
                    android:layout_margin="@dimen/fab_margin"
                    app:srcCompat="@drawable/ic_done_24dp" />

            </LinearLayout>
        </ScrollView>
    </RelativeLayout>


</LinearLayout>